@model maxutova_altynay_09.ViewModels.Cafe.CafeIndexViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>All places</h2>

<div id="restaurantsList" style="display: flex; flex-wrap: wrap; justify-content: space-between;">
    @foreach (var cafe in Model.Cafes)
    {
        <div style="width: calc(25% - 10px); margin-bottom: 20px;">
            <div id="${restaurant.id}" class="card">
                <div class="card-body">
                    <a href='@Url.Action("Details", "Cafe", new { cafeId = cafe.Id })'>
                        <img src="@cafe.CafePhoto" alt="RestImage" class="card-img-top" style="max-width: 100%; height: auto;">
                    </a>
                    <a href='@Url.Action("Details", "Cafe", new { cafeId = cafe.Id })'>
                        <h5 class="card-title">@cafe.Name</h5>
                    </a>
                </div>
            </div>
        </div>
    }
</div>


@if (Model.PageViewModel.HasPreviousPage)
{
    <a asp-action="AllCafe"
       asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
       class="btn btn-default btn">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Back
    </a>
}

@if (Model.PageViewModel.HasNextPage)
{
    <a asp-action="AllCafe"
       asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
       class="btn btn-default btn">
        Forward
        <i class="glyphicon glyphicon-chevron-right"></i>
    </a>
}